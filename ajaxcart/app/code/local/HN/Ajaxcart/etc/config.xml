<config>    
    <modules>
        <HN_Ajaxcart>
            <version>0.1.0</version>
        </HN_Ajaxcart>
    </modules>

<frontend>
        <routers>
            <ajaxcart>
                <use>standard</use>
                <args>
                    <module>HN_Ajaxcart</module>
                    <frontName>ajaxcart</frontName>
                </args>
            </ajaxcart>
        </routers>  
        
         <layout>
            <updates>
                <ajaxcart>
                    <file>hn_ajaxcart.xml</file>
                </ajaxcart>
            </updates>
        </layout>
    </frontend>
    
    <!-- admin html --> 
    <!-- end of admin html --> 
   <global>
   			<models>
            <ajaxcart>
                <class>HN_Ajaxcart_Model</class>
                <resourceModel>ajaxcart_mysql4</resourceModel>
            </ajaxcart>
            <ajaxcart_mysql4>
                <class>HN_Ajaxcart_Model_Mysql4</class>
                <entities>
                    <ajaxcart>
                        <table>ajaxcart</table>
                    </ajaxcart>
                </entities>
            </ajaxcart_mysql4>
        </models>
        
        <resources>
            <ajaxcart_setup>
                <setup>
                    <module>HN_Ajaxcart</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ajaxcart_setup>
            <ajaxcart_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ajaxcart_write>
            <ajaxcart_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ajaxcart_read>
        </resources>
   			<blocks>
   				<ajaxcart>
   					<class>HN_Ajaxcart_Block</class>
   				</ajaxcart>
   			</blocks>
   			
   			<helpers>
            <ajaxcart>
                <class>HN_Ajaxcart_Helper</class>
            </ajaxcart>
        </helpers>
         <template>
            <email>
               <checkout_payment_success_template translate="label" module="sales">
                   <label>Payment Success</label>
                   <file>payment_success.html</file>
                   <type>html</type>
               </checkout_payment_success_template>
            </email>
        </template>
   </global>
</config>
